<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recipe_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="8dp"
    android:background="@color/gray"
    tools:context=".UI.RecipeFragment">

    <!-- SEARCH BAR -->
    <EditText
        android:id="@+id/recipe_search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search drinks..."
        android:drawableStart="@android:drawable/ic_menu_search"
        android:drawablePadding="8dp"
        android:background="@drawable/search_bar_bg"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:textColor="@color/white"/>

    <!-- DRINK TYPE CARDS -->
    <GridLayout
        android:id="@+id/drink_type_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="1"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:layout_marginBottom="24dp">

        <LinearLayout
            android:id="@+id/coffee_type"
            style="@style/DrinkTypeCardStyle"
            android:orientation="vertical"
            android:layout_columnWeight="1">
            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/recipe_book"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coffee\nRecipes"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textAlignment="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tea_type"
            style="@style/DrinkTypeCardStyle"
            android:orientation="vertical"
            android:layout_columnWeight="1">
            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/recipe_book"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tea\nRecipes"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textAlignment="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/other_type"
            style="@style/DrinkTypeCardStyle"
            android:orientation="vertical"
            android:layout_columnWeight="1">
            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/recipe_book"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Other\nRecipes"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textAlignment="center"/>
        </LinearLayout>
    </GridLayout>

    <!-- PLACEHOLDER -->
    <FrameLayout
        android:id="@+id/recipe_content_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>









